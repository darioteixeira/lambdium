.floatbox
	{
	margin-bottom: Floatbox_separation;
	background: Color_floatbox;
	}

.floatbox_header
	{
	margin-bottom: 0.5em;
	text-align: center;
	font: Font_headline;
	color: Color_floatbox;
	background: Color_key;
	}

.floatbox_body
	{
	padding: 0 0.5em 0.5em;
	}

.floatbox input[type="text"],
.floatbox input[type="password"],
.floatbox input[type="submit"]
	{
	width: 100%;
	margin-bottom: 0.5em;
	}

.floatbox input[type="submit"]
	{
	margin-top: 0.5em;
	}

